<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Homepage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/navigation_drawer"
        android:layout_below="@+id/minigames_btn"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:paddingStart="5sp"
            android:text="Create Your Customized Travel Itinerary"
            android:textSize="24sp"
            android:textStyle="bold" />


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/curveshape"
            android:elevation="5dp"
            >

            <Button
                android:id="@+id/Homestartplanning"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:text="Start Planning"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>



    <RelativeLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="14dp"


        android:layout_marginEnd="16dp"
        android:background="@color/black"

        >

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/chatBotButton"
            android:layout_width="48dp"
            android:layout_height="48dp"

            android:layout_alignParentRight="true"

            android:backgroundTint="@color/white"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/baseline_support_agent_24" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="193dp"
            android:layout_above="@+id/editTextText"
            android:layout_below="@+id/textView8"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="-10dp"
            android:gravity="start"
            android:text="Where do       you want to go?"
            android:textColor="@color/white"
            android:textSize="48dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:text="Hello Mr.Morgan"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/FindStranger"
            android:layout_width="341dp"
            android:layout_height="62dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:padding="10dp"
            android:text="Find Stranger"
            />
    </RelativeLayout>

    <HorizontalScrollView
        android:layout_width="386dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9dp"
        android:id="@+id/scrollView"

        android:layout_below="@+id/constraintLayout"
        android:layout_marginTop="10sp"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingStart="16dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:src="@drawable/img_8"
                />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:src="@drawable/img_5" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/img_2" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/img_3" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/img_4" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/img_7" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/img_6" />
        </LinearLayout>
    </HorizontalScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation_drawer"
        android:layout_width="match_parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:itemIconTint="@color/black"
        android:layout_height="78dp"
        android:background="@drawable/curveshape"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="40dp"
        android:foregroundGravity="center"
        app:menu="@menu/navigation_buttons" />

    <ImageButton
        android:id="@+id/minigames_btn"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="395dp"
        android:layout_height="87dp"
        android:layout_below="@+id/scrollView"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/mini_games" />


</RelativeLayout>
