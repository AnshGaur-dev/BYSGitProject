<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#edf2f4"
    tools:context=".Homepage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/navigation_drawer"
        android:layout_below="@+id/scrollView"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:paddingStart="5sp"
            android:text="Create Your Customized Travel Itinerary"
            android:textSize="24sp"
            android:textStyle="bold" />


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/curveshape"
            >

            <Button
                android:id="@+id/Homestartplanning"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:text="Start Planning"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>






    <TextView
        android:id="@+id/popularDestination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/constraintLayout"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:padding="1sp"
        android:text="Popular Destinations"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="14dp"


        android:layout_marginEnd="16dp"
        android:background="@drawable/img_28"

        >

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/chatBotButton"
            android:layout_width="150dp"
            android:layout_height="45dp"

            android:layout_alignParentRight="true"


            android:backgroundTint="#CAF3F8"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/bot" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editTextText"
            android:layout_below="@+id/textView8"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="5dp"

            android:gravity="start"
            android:text="Where do       you want to go?"
            android:textColor="@color/white"
            android:textSize="48dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:text="Hello Mr.Morgan"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textStyle="bold"


            />

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"


            android:layout_marginEnd="16dp"

            android:layout_marginBottom="5dp"
            android:background="@drawable/curver_without_line"
            android:ems="10"
            android:gravity="start"
            android:hint=" SEARCH"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textCursorDrawable="@color/black" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignTop="@+id/editTextText"
            android:layout_alignRight="@+id/editTextText"
            android:layout_alignBottom="@+id/editTextText"
            android:layout_marginStart="16sp"
            android:layout_marginTop="5sp"
            android:layout_marginEnd="16sp"
            android:layout_marginBottom="5sp"
            android:background="@color/white"
            app:srcCompat="@drawable/baseline_search_24" />

    </RelativeLayout>

    <HorizontalScrollView
        android:layout_width="386dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9dp"
        android:id="@+id/scrollView"

        android:layout_below="@+id/popularDestination"
        android:layout_marginTop="10sp"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingStart="16dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:src="@drawable/img_8"
                />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:src="@drawable/img_5" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/img_2" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/img_3" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/img_4" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/img_7" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/img_6" />
        </LinearLayout>
    </HorizontalScrollView>





    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation_drawer"
        android:layout_width="match_parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_height="78dp"
        android:background="@drawable/curveshape"
        app:itemIconTint="@color/black"
        app:itemRippleColor="@color/white"

        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="40dp"
        android:foregroundGravity="center"
        app:menu="@menu/navigation_buttons" />


</RelativeLayout>
