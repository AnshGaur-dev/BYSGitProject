<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green_grad"
    tools:context=".Profile">



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation_drawer"
        android:layout_width="333dp"
        android:layout_height="78dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/curveshape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/navigation_buttons"
        app:itemIconTint="@color/black"
        app:itemRippleColor="@color/white"
        />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/img_18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="173dp"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="36dp"
        android:gravity="center"
        android:text="Arthur Morgan"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="407dp"
        android:layout_height="250dp"
        android:layout_marginBottom="40dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:cardCornerRadius="60dp"
        app:layout_constraintBottom_toTopOf="@+id/navigation_drawer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <FrameLayout
            android:id="@+id/frame_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView17"
        android:layout_width="379dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="132dp"
        android:gravity="bottom"
        android:text="Saved Places"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:layout_width="410dp"
        android:layout_height="178dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="40dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="160dp"
                android:paddingEnd="10dp"
                android:src="@drawable/img_20" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="160dp"
                android:paddingEnd="10dp"
                android:src="@drawable/img_21" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="160dp"
                android:paddingEnd="10dp"
                android:src="@drawable/img_22" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="160dp"
                android:paddingEnd="10dp"
                android:src="@drawable/img_23" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="160dp"
                android:paddingEnd="10dp"
                android:src="@drawable/img_24" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="160dp"
                android:paddingEnd="10dp"
                android:src="@drawable/img_25" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="160dp"
                android:paddingEnd="10dp"
                android:src="@drawable/img_26" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="160dp"
                android:paddingEnd="10dp"
                android:src="@drawable/img_27" />

        </LinearLayout>
    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>